{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: ['github>marcusrbrown/renovate-config#4.2.3', 'github>sanity-io/renovate-config:semantic-commit-type'],
  packageRules: [
    {
      matchPackageNames: ['markdownlint', 'markdownlint-cli2'],
      groupName: 'markdownlint',
    },
  ],
  postUpgradeTasks: {
    commands: ['pnpm run bootstrap', 'pnpm run fix'],
    executionMode: 'branch',
  },
}
