{
  "name": "marcusrbrown",
  "version": "0.0.0",
  "description": "My GitHub public profile README and tool configurations.",
  "repository": "https://github.com/marcusrbrown/marcusrbrown",
  "license": "MIT",
  "author": "Marcus R. Brown <contact@marcusrbrown.com>",
  "type": "module",
  "scripts": {
    "ab-test": "tsx scripts/ab-test-cli.ts",
    "analytics": "tsx scripts/profile-analytics.ts",
    "analytics:collect": "tsx scripts/profile-analytics.ts collect",
    "analytics:report": "tsx scripts/profile-analytics.ts report",
    "badges:fetch": "tsx scripts/update-badges.ts --fetch-only",
    "badges:update": "tsx scripts/update-badges.ts",
    "bootstrap": "pnpm install --prefer-offline --loglevel warn",
    "content:track": "tsx scripts/content-performance-tracking.ts",
    "fix": "pnpm run fix:markdown && pnpm run fix:eslint",
    "fix:eslint": "eslint --fix",
    "fix:markdown": "markdownlint-cli2 --fix",
    "preinstall": "npx only-allow pnpm",
    "lint": "markdownlint-cli2 && tsc --noEmit && eslint",
    "mobile:test": "tsx scripts/mobile-responsiveness-tester.ts",
    "prepare": "simple-git-hooks",
    "sponsors:fetch": "tsx scripts/fetch-sponsors-data.ts",
    "sponsors:update": "tsx scripts/update-sponsors.ts",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*.{ts,js,jsx,tsx,css,md,json,yaml,yml}": [
      "pnpm fix:eslint"
    ]
  },
  "prettier": "@bfra.me/prettier-config/120-proof",
  "dependencies": {
    "@bfra.me/badge-config": "0.2.0",
    "@octokit/graphql": "^9.0.1",
    "@octokit/rest": "^22.0.0",
    "@octokit/types": "^16.0.0"
  },
  "devDependencies": {
    "@bfra.me/eslint-config": "0.47.7",
    "@bfra.me/prettier-config": "^0.16.1",
    "@bfra.me/tsconfig": "^0.12.0",
    "@types/node": "^24.2.1",
    "@vitest/ui": "4.0.16",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jiti": "2.6.1",
    "lint-staged": "16.2.7",
    "markdownlint": "0.40.0",
    "markdownlint-cli2": "0.20.0",
    "prettier": "3.7.4",
    "simple-git-hooks": "2.13.1",
    "tsx": "^4.20.3",
    "vitest": "4.0.16"
  },
  "packageManager": "pnpm@10.27.0",
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
